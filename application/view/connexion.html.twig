{% extends "base.html.twig" %}

{% block window %}
    <div class="insc-container">
        <div id="topbar"></div>
        <div id="insc-window" class="bck-white-dark">
            <img src="public/medias/logocoul.svg" width="225px" height="60px" alt="scrapin logo">
            <form action="">
                <header>
                    <h1 class="txt-sec f-it f-19 txt-center">Identification</h1>
                </header>
                <label for="form-username" class="f-14">Nom d'utilisateur</label>
                <input class="f-13" type="text" name="username" id="form-username" placeholder="Entrez un nom d'utilisateur" required>
                <label for="form-password" class="f-14">Mot de passe</label>
                <input class="f-13" type="password" name="password" id="form-password" placeholder="Entrez votre mot de passe" required>
                <div class="signin-link"><a href="./inscription">Cliquez ici pour vous inscrire.</a></div>
                <p id="error-message" class="f-12 f-bold txt-error txt-center" style="display:none;">Attention! Message d'erreur!</p>
                <div class="login-button"><img src="public/medias/tick.svg" width="35px" height="26px" alt="connect"></div>
            </form>
        </div>
        <div id="footbar"></div>
    </div>
    
{% endblock window %}

{% block script %}
    <script type="module" src="public/js/connexion.js"></script>
{% endblock script %}