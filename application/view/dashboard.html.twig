{% extends "base.html.twig" %}

{% block header %}
    {% include "/parts/header.html.twig" %}
{% endblock %}

{% block window %}
<div id="main-container">
    <section id="scraplist-container" class="bck-white-dark">
        <header id="scraplist-title">
            <img id="scraplist-icn" src="public/medias/scraps.svg" width="35px" height="35px   " alt="scrapin logo">
            <p class="f-20 txt-main f-bold font-sec">Mes collectes</p>
        </header>
        <div id="scraplist-add-btn" onclick="newScrap()">
            <div class="plus-icn"></div>
            <p class="mp0 f-sbold">Nouvelle collecte</p>
        </div>
        <div id="scrapitems-container">
        {% block scraplist %}
            {% include "/parts/scraplist.html.twig" %}
        {% endblock %}
        </div>
    </section>
        
    <section id="right-window">
        <div id="scrap-view-window">
            <div id="scrap-view-title-box">
                <img id="scrap-view-icn" src="public/medias/view.svg" width="35px" height="35px" >
                <div class="view-datebox-line">
                    <h2 id="scrap-view-title">Visualiser "Nom de la collecte"</h2>
                    <p id="scrap-view-url">https://www.nomdusite.fr</p>
                </div>
            </div>
            <div class="view-datebox selected">
                <div class="datebox-delete-btn"></div>
                <div class="view-datebox-line">
                    <p class="view-datebox-date">Le 28 Février 2021</p>
                    <div class="view-datebox-arrow"></div>
                </div>
                <div class="datebox-line-content">
                    <h2>hello</h2>
                </div>
            </div>
            <div class="view-datebox">
                <div class="datebox-delete-btn"></div>
                <div class="view-datebox-line">
                    <p class="view-datebox-date">Le 27 Février 2021</p>
                    <div class="view-datebox-arrow"></div>
                </div>
                <div class="datebox-line-content">
                    <h2>hello</h2>
                </div>
            </div>
            <div class="view-datebox">
                <div class="datebox-delete-btn"></div>
                <div class="view-datebox-line">
                    <p class="view-datebox-date">Le 26 Février 2021</p>
                    <div class="view-datebox-arrow"></div>
                </div>
                <div class="datebox-line-content">
                    <h2>hello</h2>
                </div>
            </div>
        </div>
    </section>
</div>
    
{% endblock window %}

{% block script %}
    <script src="public/js/dashboard.js"></script>
{% endblock script %}